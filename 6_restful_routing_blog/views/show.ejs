<% include partials/navbar %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached segment">
        <div class="item">
            <img class="blog-image ui centered rounded image" src="<%= blog.image %>" alt="Image of <%= blog.title %> post">
            <div class="content">
                <span><%= blog.dateCreated.toDateString() %></span>
            </div>
            <div class="description">
                <p><%= blog.body %></p>        
            </div>
        </div>
    </div>
</div>






