<% include partials/header %>
<% include partials/navbar %>

<div class="ui main text container">
    <!-- this header needs some more margin top -->
    <div class="ui huge header">Welcome to my blog! You'll find all my posts here</div>
    <div class="ui top attached segment">        
        <% blogs.forEach(function(blog){  %>
            <div class="ui divided items">
                <div class="item">                   
                    <img class="blog-image" src="<%= blog.image %>" alt="Image of <%= blog.title %> post">
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                        <div class="meta">
                            <span><%= blog.dateCreated.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%= blog.body.substring(0, 100) %>... </p>
                        </div>
                        <div class="extra">
                            <a href="/blogs/<%= blog._id %>"><button class="ui button">More...</button></a> 
                        </div>
                        <hr>
                    </div>        
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>