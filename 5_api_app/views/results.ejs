<% include partials/header %>
<h1>Your Beers</h1>
<div class="container add-padding">   
    <!-- show each item that gets returned from Punk API in response to the search request -->
    <!-- Punk API returns an array of beer objects -->
    <% beerResults.forEach(function(beer){ %>
        <li> 
            <strong><%= beer.name %> </strong> - <%= beer.tagline %> 
        </li>
    <% }); %>

    <footer class="add-padding">
        <form action="/" method="GET">
            <button class="btn btn-info" type="submit">Take me back Home</button>
        </form>    
    </footer>
</div>

<% include partials/footer %>